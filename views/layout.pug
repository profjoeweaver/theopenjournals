//- Input: Page Tite for head, section for menu, content for body

doctype html
html

head
    meta(charset="utf-8")
    meta(name="viewport",content="width=device-width, initial-scale=1, shrink-to-fit=no")
    block title
      title The Open Journals
    link(rel="stylesheet",href="/../stylesheets/bootstrap.min.css")
    link(rel="stylesheet",href="/../stylesheets/custom.css")
    link(rel="stylesheet",href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css")

body(class="d-flex flex-column h-100")
  header
    nav(class="navbar navbar-expand-lg navbar-dark bg-black px-1")
      button(class="navbar-toggler",type="button",data-bs-toggle="collapse",data-bs-target="#navbarSupportedContent",aria-controls="navbarSupportedContent",aria-expanded="false",aria-label="Toggle navigation")
        span(class="navbar-toggler-icon")
        span(class="ms-2") The Open Journals
      div(class="collapse navbar-collapse col-sm-12",id="navbarSupportedContent")
        ul(class="navbar-nav col-12 mb-sm-2 mb-lg-0 d-flex align-items-center justify-content-lg-between")
          li(class="nav-item dropdown col-md-4 col-sm-12")
            a(class="nav-link dropdown-toggle", href="#",id="navbarDropdown", role="button", data-bs-toggle="dropdown", aria-expanded="false")
              block sectionTitle 
                span The Open Journals
            ul(class="dropdown-menu my-2",aria-labelledby="navbarDropdown")
              li
                a(class="dropdown-item",href="/../theopenjournal") The Open Journal
              li
                a(class="dropdown-item",href="/../psychology") Psychology
              li
                hr(class="dropdown-divider")
              li
                a(class="dropdown-item",href="alljournals")
                  i(class="bi bi-three-dots") Browse All
              li
                hr(class="dropdown-divider")
              li
                a(class="dropdown-item",href="index") TOJ Platform
          li(class="nav-item my-2 col-md-4 col-sm-12")
            form(class="d-flex")
              input(class="form-control w-100",type="search",placeholder="Search",aria-label="Search",id="NavSearchBox")
              button(class="btn btn-primary",type="submit",id="NavSearchButton") Search
          li(class="nav-item d-flex justify-content-end pe-2 mb-2 col-md-4 col-sm-12")
            button(type="button",class="btn btn-primary", onclick="window.location='/../login';") Log In

  main(class="flex-shrink-0")
    div(class="container-fluid")
      div(class="row bg-white mx-0 py-4")
        block content
          | Nothing to see here
  footer(class="footer mt-auto")
    div(class="container-flex")
      div(class="row bg-dark text-light pt-4 mx-0")
        div(class="col-sm-12 col-md-12 col-lg-4")
          ul(class="list-unstyled")
            li
              h5 The Open Journals
            li(class="small")
              | #[a(href="index") The Open Journals] was created by and is maintained by #[a(href="http://svsu.edu/~jweaver/site",target="_blank") Joe Weaver]
        div(class="col-sm-12 col-md-6 col-lg-4")
          ul(class="list-unstyled")
            li
              h5 About
            li
              a(href="#" class="link-light link-underline link-offset-2 link-underline-opacity-0 link-underline-opacity-100-hover") TOJ Story
            li
              a(href="#" class="link-light link-underline link-offset-2 link-underline-opacity-0 link-underline-opacity-100-hover") FAQ
            li
              a(href="#" class="link-light link-underline link-offset-2 link-underline-opacity-0 link-underline-opacity-100-hover") Contact
        div(class="col-sm-12 col-md-6 col-lg-4")
          ul(class="list-unstyled")
            li
              h5 Community
            li
              a(href="#" class="link-light link-underline link-offset-2 link-underline-opacity-0 link-underline-opacity-100-hover") Authors
            li
              a(href="#" class="link-light link-underline link-offset-2 link-underline-opacity-0 link-underline-opacity-100-hover") Reviewers
            li
              a(href="#" class="link-light link-underline link-offset-2 link-underline-opacity-0 link-underline-opacity-100-hover") Readers
            li
              a(href="#" class="link-light link-underline link-offset-2 link-underline-opacity-0 link-underline-opacity-100-hover") Editors
  script(src="/../javascripts/bootstrap.bundle.min.js")
  script(src="https://code.jquery.com/jquery-3.7.0.slim.min.js" integrity="sha256-tG5mcZUtJsZvyKAxYLVXrmjKBVLd6VpVccqz/r4ypFE=" crossorigin="anonymous")
  script(src="/../javascripts/ui.js")