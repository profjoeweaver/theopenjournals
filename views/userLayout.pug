//- Input: Page Tite for head, section for menu, content for body

doctype html
html

head
    meta(charset="utf-8")
    meta(name="viewport",content="width=device-width, initial-scale=1, shrink-to-fit=no")
    block title
      title The Open Journals User Dashboard
    link(rel="stylesheet",href="/../stylesheets/custom.css")
    link(rel="stylesheet",href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css")
    link(rel="apple-touch-icon" sizes="180x180" href="/../apple-touch-icon.png")
    link(rel="icon" type="image/png" sizes="32x32" href="/../favicon-32x32.png")
    link(rel="icon" type="image/png" sizes="16x16" href="/../favicon-16x16.png")
    link(rel="manifest" href="/site.webmanifest")
    
    script(src="/../javascripts/main.js")

body(class="d-flex flex-column h-100")
  header
    nav(class="navbar navbar-expand-lg navbar-dark bg-black px-1")
      button(class="navbar-toggler",type="button",data-bs-toggle="collapse",data-bs-target="#navbarSupportedContent",aria-controls="navbarSupportedContent",aria-expanded="false",aria-label="Toggle navigation")
        span(class="navbar-toggler-icon")
        span(class="ms-2") The Open Journals
      div(class="collapse navbar-collapse col-sm-12",id="navbarSupportedContent")
        ul(class="navbar-nav col-12 mb-sm-2 mb-lg-0 d-flex align-items-center justify-content-lg-between")
          li(class="nav-item dropdown col-md-4 col-sm-12")
            a(class="nav-link dropdown-toggle", href="#",id="navbarDropdown", role="button", data-bs-toggle="dropdown", aria-expanded="false")
              block sectionTitle 
                span User Dashboard
            ul(class="dropdown-menu my-2",aria-labelledby="navbarDropdown")
              li
                a(class="dropdown-item",href="/user") My Dash
              li
                a(class="dropdown-item",href="projects/") My Projects
              li
                a(class="dropdown-item",href="reviews/") My Reviews
              li
                a(class="dropdown-item",href="reading/") Reading List
              li
                hr(class="dropdown-divider")
              li
                a(class="dropdown-item",href="./support/")
                  i(class="bi bi-question-square") &nbsp;Support
          li(class="nav-item my-2 col-sm-12 col-md-4")
            form(class="d-flex")
              input(class="form-control",type="search",placeholder="Search",aria-label="Search",id="NavSearchBox")
              button(class="btn btn-primary",type="submit",id="NavSearchButton") Search
          li(class="nav-item d-flex justify-content-end mb-2 pe-2 col-sm-12 col-md-4")
            button(type="button",class="btn btn-primary", onclick="window.location='/../login';") Log Out

  main(class="flex-shrink-0")
    div(class="container-fluid")
      div(class="row bg-white mx-0 py-4 d-flex")
        block content
          | Nothing to see here
  footer(class="footer mt-auto")
    div(class="container-flex")
      div(class="row bg-dark text-light pt-4 mx-0")
        div(class="col-sm-12 col-md-12 col-lg-8")
          ul(class="list-unstyled")
            li
              h5 The Open Journals
            li(class="small")
              | #[a(href="index") The Open Journals] was created by and is maintained by #[a(href="http://svsu.edu/~jweaver/site",target="_blank") Joe Weaver]
        div(class="col-sm-12 col-md-6 col-lg-2")
          ul(class="list-unstyled")
            li
              h5 About
            li
              a(href="#" class="link-light link-underline link-offset-2 link-underline-opacity-0 link-underline-opacity-100-hover") TOJ Story
            li
              a(href="#" class="link-light link-underline link-offset-2 link-underline-opacity-0 link-underline-opacity-100-hover") FAQ
            li
              a(href="#" class="link-light link-underline link-offset-2 link-underline-opacity-0 link-underline-opacity-100-hover") Contact
        div(class="col-sm-12 col-md-6 col-lg-2")
          ul(class="list-unstyled")
            li
              h5 Community
            li
              a(href="#" class="link-light link-underline link-offset-2 link-underline-opacity-0 link-underline-opacity-100-hover") Authors
            li
              a(href="#" class="link-light link-underline link-offset-2 link-underline-opacity-0 link-underline-opacity-100-hover") Reviewers
            li
              a(href="#" class="link-light link-underline link-offset-2 link-underline-opacity-0 link-underline-opacity-100-hover") Readers
            li
              a(href="#" class="link-light link-underline link-offset-2 link-underline-opacity-0 link-underline-opacity-100-hover") Editors
  script(type="application/javascript" src= "/tinymce/tinymce.min.js")
  script(type="application/javascript" src= "/javascripts/tinymce-config.js")              